// main: main.styl, out: ../../public/css/partial.article.css
article
  padding 2.5rem 0
  @media screen and (min-width: 1024px)
    padding 5rem 0
  section
    margin-bottom 2.25rem
    &:last-child
      margin-bottom 0
    a
      color #0080a5
      text-decoration none
      &:hover
        text-decoration underline
    h1, h2
      color #000
    h4
      font-weight 400
      text-decoration underline
    p,
    blockquote,
    pre
      margin-bottom 1.5rem
    blockquote
      border-left 2px solid
      padding 1rem
      background-color #efefef
    table
      & + p
        line-height 60%
        em
          font-size 60%
    img
      margin 0
      & + em
        display block
        line-height 60%
        font-size 60%
    &.section-title
      margin-bottom 2rem
    &.section-neck
      font-size 85%
      ul
        li
          margin-bottom 4px
      .badge
        margin-bottom 4px
        padding 4px 8px
        background-color #E6F4F1
        border-radius 2px
        display inline-block
        font-size 14px
        &:not(:last-child)
          margin-right 5px
    &.section-summary
      border-width 1px 0
      border-style solid
      border-color lightgray
      padding 10px 0
      p
        font-style italic
        line-height 1.2rem
        font-size 80%
        strong
          color #cc0000
          margin-right 5px
    &.section-content
      pre
        font-size 75%
        background-color lightgray
        padding 15px
        border-radius 5px
        overflow-x auto
      code
        font-style italic
    &.vote
      text-align center
      button
          border 2px solid #000;
          padding 20px 60px
          border-radius: 6px
          font-size 20px
          margin 0 15px
          &.vote-negative
            &:hover
              color #fff
              background-color #D8161899
              border-color darken(#D8161899, 15%)
          &.vote-positive
            &:hover
              color #fff
              background-color #2ac936b8
              border-color darken(#2ac936b8, 15%)
    &.read-more
      .continue-reading
        text-align right
      .related-articles
        li
          margin-bottom 15px
          font-size 80%
